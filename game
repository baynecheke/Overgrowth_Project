      <div id="opponent-formation" class="cards-row"></div>

      <div id="controls">
        <button id="attack-btn" disabled>Attack (1)</button>
        <button id="active-btn" disabled>Use Active</button>
        <button id="end-turn-btn" disabled>End Turn</button>
